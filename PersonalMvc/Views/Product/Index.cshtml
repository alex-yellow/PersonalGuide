@model IEnumerable<PersonalMvc.Models.ViewModels.ProductViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}

<h1>Изделия</h1>
<div>
    <table class="table">
        <tr>
            <th>Название</th>
            <th>Отдел</th>
            <th>Материал</th>
            <th>Ответственный сотрудник</th>
            <th>Время изготовления</th>
            <th>Тип изделия</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Department.Name</td>
                <td>@item.Material.Name</td>
                <td>@item.Personal.Name</td>
                <td>@item.Time час</td>
                <td>
                    @if (item.isBigSize)
                    {
                        <text>Крупногабаритное</text>
                    }
                    @if (item.isMilitary)
                    {
                        <text>Специзделие</text>
                    }
                    @if (item.isSpecial)
                    {
                        <text>Не основное производство</text>
                    }
                </td>
                <td>@Html.ActionLink("Удалить", "Delete", new { id = item.Id })</td>
            </tr>
        }
    </table>
</div>
<a href="/Product/ChooseDepartment">Добавить</a>